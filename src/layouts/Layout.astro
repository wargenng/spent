---
import {
    SignedIn,
    SignedOut,
    SignInButton,
    SignUpButton,
} from "@clerk/astro/components";
import { ClientRouter } from "astro:transitions";
import "@fontsource-variable/inter";

interface Props {
    title: string;
    backHref?: string;
    backText?: string;
}

const { title, backHref, backText } = Astro.props;

import Navbar from "@/components/navbar/navbar.astro";
import "@/styles/globals.css";
import Bottomnavbar from "@/components/bottomnavbar/bottomnavbar.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="budgeting web application designed for manual input of expenses, encouraging a mindful approach to financial management."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ClientRouter />
    </head>
    <body class="w-full h-full">
        <SignedOut>
            <div class="w-screen h-screen flex items-center justify-center">
                <div
                    class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700"
                >
                    <div class="space-y-6">
                        <h5
                            class="text-xl font-medium text-gray-900 dark:text-white"
                        >
                            Sign in to and start tracking!
                        </h5>

                        <SignInButton
                            type="submit"
                            class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                            >Login to your account</SignInButton
                        >
                        <div
                            class="text-sm font-medium text-gray-500 dark:text-gray-300"
                        >
                            Not registered? <SignUpButton
                                class="text-blue-700 hover:underline dark:text-blue-500"
                                >Create account</SignUpButton
                            >
                        </div>
                    </div>
                </div>
            </div>
        </SignedOut>
        <SignedIn>
            <Navbar
                backHref={backHref}
                backText={backText}
                transition:persist
            />
            <div
                class="max-w-screen-xl flex flex-wrap items-center justify-center mx-auto p-4 pb-24 lg:pb-0 pt-24"
            >
                <slot />
            </div>
            <Bottomnavbar transition:persist />
        </SignedIn>
    </body>
</html>
<style is:global>
    body {
        font-family: "Inter Variable", sans-serif;
    }
</style>
